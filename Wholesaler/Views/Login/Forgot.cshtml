@model Wholesaler.Models.LoginForgotModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "_Layout.cshtml";
}

@using (Html.BeginForm())
{
<div class="panel panel-default">
    <div class="panel panel-heading">
        Recover Password
    </div>
    <div class="panel-body">
        <div class="form-group">
            <div class="input-group">
                <span class="input-group-addon input-sm"><i class="glyphicon glyphicon-user"></i></span>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-sm", placeholder = "Email" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
        </div>
    </div>
<div class="panel panel-footer">
    <button class="btn btn-default btn-sm pull-right" type="submit">Recover</button>
    <span class="link_reg">@Html.ActionLink("Login", "Index", "Login")</span>
</div>
    </div>
}




