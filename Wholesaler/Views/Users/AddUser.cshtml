@model Wholesaler.Models.UsersDetailsModel
@{
    ViewBag.Title = "New User";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<script>
    function submitForm() { $('#pageForm').submit(); }
</script>

<h2>Add New User</h2>

<form method="post" id="pageForm" action="~/Users/AddUser/@Model.User.ID">
    @*<div class="pageIcons"><a href="@Url.Action("Index", "Users")" title="Back"><i class="glyphicon glyphicon-arrow-left  btn-lg  edit-del " style="color:#337AB7; border: 1px solid black; margin-bottom: 10px;"></i></a></div>*@
    <div class="well">

        <p>
            <div class="row">
                <label class="col-sm-2 control-label">User Email</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(x => x.User.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.User.Email)
                </div>
            </div>
        </p>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">First Name</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(x => x.User.FirstName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.User.FirstName)
                </div>
            </div>
        </p>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Last Name</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(x => x.User.LastName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.User.LastName)
                </div>
            </div>
        </p>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Password</label>
                <div class="col-sm-7">
                    @Html.PasswordFor(x => x.User.Password, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.User.Password)
                </div>
            </div>
        </p>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Confirm Password</label>
                <div class="col-sm-7">
                    @Html.PasswordFor(x => x.User.ConfirmPassword, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.User.ConfirmPassword)
                </div>
            </div>
        </p>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Permission Level</label>
                <div class="col-sm-7">
                    @Html.EnumDropDownListFor(x => x.User.PermissionLevel,
                                                 "Select Permission Level",
                                                 new { @class = "form-control"})
                    @Html.ValidationMessageFor(x => x.User.PermissionLevel)
                </div>
            </div>
        </p>

    </div>
    <a href="#" class="btn btn-success" role="button" onclick="submitForm(); return false;">Submit</a>
</form>

