@model Wholesaler.Models.CompanyDetailsModel
@{
    ViewBag.id = Model.Company.ID;
}
@{
    ViewBag.Title = "Documents";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

@*<a href="~/CompanyDocuments/AddDocument/@Model.Company.ID" class="btn new-record-button" role="button">Upload New Document</a>*@

<table class="stripe hover compact row-border" id="main-table">
    <thead>
        <tr>
            <th data-field="ID" data-sortable="true">ID</th>
            <th data-field="DocumentName" data-sortable="true">Document Name</th>

            <th data-orderable="false"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var companyDocument in Model.DocumentsList)
        {
            string url = "/Uploads/Documents/" + companyDocument.GUID;
            <tr>
                <td>@companyDocument.ID</td>
                <td><a href="@url" target="_blank">@companyDocument.DocumentName</a></td>

                <td>
                    <span class="glyphicon glyphicon-remove-circle" onclick="deleteItem(@companyDocument.ID)" title="Delete"></span>
                </td>
            </tr>
        }
    </tbody>
</table>

@section scripts
    {
    <script>
        var table;
        $(function () {
            $('#main-table').append('<caption style="caption-side: top; background-color: #4380c3; color: white; font-weight: 550;padding-left: 10px;">Documents for @Model.Company.CompanyName<a href="/CompanyDocuments/AddDocument/@Model.Company.ID" id="tableHeader"><span class="glyphicon glyphicon-plus-sign" style="padding-right:5px;"></span>Upload Document</a></caption>');
            table = $('#main-table').DataTable(
                {
                    "searching": false,
                    "ordering": false,
                    "lengthChange": false,

                    "pagingType": "full_numbers",
                    "language": {
                        paginate: {
                            next: '<span class="glyphicon glyphicon-menu-right"></span>',
                            previous: '<span class="glyphicon glyphicon-menu-left"></span>',
                            first: '<span class="glyphicon glyphicon-menu-left double-menu-arrow"></span><span class="glyphicon glyphicon-menu-left double-menu-arrow"></span>',
                            last: '<span class="glyphicon glyphicon-menu-right double-menu-arrow"></span><span class="glyphicon glyphicon-menu-right double-menu-arrow"></span>'
                        }
                    },
                });
        });
        function deleteItem(id) {
            smoke.confirm('Are you sure you want to delete this record?', function (e) {
                if (e)
                    location.href = '/CompanyDocuments/delete/' + id;
            });
        }

    </script>
}

