@model LoginIndexModel
@using Wholesaler.Models
@{
    ViewBag.Title = "Login";
    Layout = "_Layout.cshtml";

}

@using (Html.BeginForm())
{
    <div class="panel panel-default">
        <div class="panel panel-heading">Login to Wholesaler</div>
        <div class="panel panel-body">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon input-sm"><i class="glyphicon glyphicon-user"></i></span>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control input-sm", placeholder = "Email" })
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon input-sm"><i class="glyphicon glyphicon-lock"></i></span>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control input-sm", placeholder = "Password" })
                </div>
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div class="form-group">
                <label class="checkbox-inline">
                    @Html.CheckBoxFor(x => x.RememberMe)
                    Remember me
                </label>
            </div>
        </div>
        <div class="panel panel-footer">
            <span class="link_reg">@Html.ActionLink("Forgot Password", "forgot")</span>
            <button class="btn btn-default btn-sm pull-right" style="position: relative; left: 56%; float:none !important;" type="submit">Sign In</button>
        </div>
    </div>

}

