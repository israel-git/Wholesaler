@model Wholesaler.Models.CompanyContactsDetailsModel
@{
    ViewBag.id = Model.CompanyContact.CompanyID;
}
@{
    ViewBag.Title = "Contact Details";
    Layout = "~/Views/Shared/_Navbar.cshtml";
}

<script>
    function submitForm() { $('#pageForm').submit(); }
</script>


<form method="post" id="pageForm" action="~/CompanyContacts/CompanyDetails/@Model.CompanyContact">
    @if (Model.CompanyContact.ID > 0)
    {@Html.HiddenFor(x => x.CompanyContact.ID)}

    <div class="row">&nbsp;</div>
    @*<div class="pageIcons"><a href="@Url.Action("ContactsList/" + Model.CompanyContact.CompanyID, "CompanyContacts")" title="Back"><i class="glyphicon glyphicon-arrow-left  btn-lg  edit-del " style="color:#337AB7; border: 1px solid black; margin-bottom: 10px;"></i></a></div>*@
    <div class="row col-sm-12 formEditContainer well">

        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Contact Name</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(x => x.CompanyContact.ContactName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CompanyContact.ContactName)
                </div>
            </div>
        </p>
        <div class="row">
            <label class="col-sm-2 control-label">Phone Number</label>
            <div class="col-sm-7">
                @Html.TextBoxFor(x => x.CompanyContact.PhoneNum, new { @class = "form-control", })
                @Html.ValidationMessageFor(x => x.CompanyContact.PhoneNum)
            </div>
        </div>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Email</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(x => x.CompanyContact.Email, new { @class = "form-control", })
                    @Html.ValidationMessageFor(x => x.CompanyContact.Email)
                </div>
            </div>
        </p>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Position</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(x => x.CompanyContact.Position, new { @class = "form-control", })
                    @Html.ValidationMessageFor(x => x.CompanyContact.Position)
                </div>
            </div>
        </p>
        <p>
            <div class="row">
                <label class="col-sm-2 control-label">Comments</label>
                <div class="col-sm-7">
                    @Html.TextBoxFor(x => x.CompanyContact.InternalComments, new { @class = "form-control", })
                    @Html.ValidationMessageFor(x => x.CompanyContact.InternalComments)
                </div>
            </div>
        </p>
        @Html.HiddenFor(x => x.CompanyContact.CompanyID)
    </div>
    @if (Model.CompanyContact.ID > 0)
    {
        <button type="button" class="btn btn-success" onclick="submitForm(); return false;">Save</button>
        @:&nbsp;
        <button type="button" class="btn btn-danger" onclick="deleteItem(@Model.CompanyContact.ID); return false;">Delete</button>
    }
</form>

<script>
    function deleteItem(id) {
        smoke.confirm('Are you sure you want to delete this record?', function (e) {
            if (e)
                location.href = '/CompanyContacts/delete/' + id;
        });
    }
</script>

