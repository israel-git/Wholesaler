    $(function () {
        $('a').each(function () {
            
            if (window.location.href.indexOf("Companies/Details") > -1) {
                $('#details').addClass('active');
            }
            if (window.location.href.indexOf("Addresses") > -1) {
                $('#addresses').addClass('active');
            }
            if (window.location.href.indexOf("Contacts") > -1) {
                $('#contacts').addClass('active');
            }
            if (window.location.href.indexOf("Positions") > -1) {
                $('#positions').addClass('active');
            }
            if (window.location.href.indexOf("Documents") > -1) {
                $('#documents').addClass('active');
            }
            if (window.location.href.indexOf("Orders") > -1 || window.location.href.indexOf("Proposals") > -1
                || window.location.href.indexOf("Invoices") > -1 || window.location.href.indexOf("Payments") > -1) {
                $('#orders').addClass('active');
            }
        });
    });
</script>

